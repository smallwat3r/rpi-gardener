# Optional: IP address to add to the self-signed certificate
# CERT_IP=192.168.1.100

# Admin password for the settings UI (required to enable admin access)
# Login with username "admin" and this password
# ADMIN_PASSWORD=your_secure_password

# Sensor thresholds (optional, these are the defaults)
MAX_TEMPERATURE=25
MIN_TEMPERATURE=18
MAX_HUMIDITY=65
MIN_HUMIDITY=40

# Moisture thresholds (optional)
MIN_MOISTURE=30
MIN_MOISTURE_PLANT_1=55
MIN_MOISTURE_PLANT_2=30
MIN_MOISTURE_PLANT_3=35

# Notifications (optional)
# Set ENABLE_NOTIFICATION_SERVICE=1 to enable
ENABLE_NOTIFICATION_SERVICE=0
# Backends: "gmail", "slack", or "gmail,slack" for both
NOTIFICATION_BACKENDS=gmail

# Gmail configuration
# GMAIL_SENDER=sender@gmail.com
# GMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
# GMAIL_USERNAME=your-gmail-username
# GMAIL_PASSWORD=your-app-password

# Slack configuration (create a webhook at https://api.slack.com/messaging/webhooks)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Data retention (optional, default is 3 days)
# Can also be configured via the admin interface
# RETENTION_DAYS=3

# Humidifier (optional, TP-Link Kasa smart plug)
# Automatically controls a humidifier based on humidity alerts
# Turns ON when humidity drops below MIN_HUMIDITY, OFF when it recovers
ENABLE_HUMIDIFIER=0
HUMIDIFIER_HOST=192.168.1.100

# OLED display (optional, shows temperature and humidity)
# SSD1306 128x64 display connected via I2C
ENABLE_OLED=0

# LCD 1602A display (optional, shows active alerts)
# Displays alert status on a 16x2 character LCD via I2C
ENABLE_LCD=0
LCD_I2C_ADDRESS=0x27
LCD_SCROLL_DELAY_SEC=0.7
