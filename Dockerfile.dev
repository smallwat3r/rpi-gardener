# Frontend
FROM node:20-alpine AS frontend-builder
WORKDIR /build
COPY rpi/server/frontend/package*.json ./
RUN npm ci --ignore-scripts
COPY rpi/server/frontend/ ./
RUN npm run build

# Python dependencies
FROM python:3.14-slim-bookworm AS python-builder
WORKDIR /build
RUN pip install --no-cache-dir uv
COPY pyproject.toml ./
RUN python -m venv /opt/venv \
    && . /opt/venv/bin/activate \
    && uv pip install --no-cache ".[dev]"

# Runtime
FROM python:3.14-slim-bookworm AS runtime
RUN apt-get update && apt-get install -y --no-install-recommends tini \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY --from=python-builder /opt/venv /opt/venv
COPY rpi/ ./rpi/
COPY scripts/ ./scripts/
COPY --from=frontend-builder /static/dist ./rpi/server/static/dist
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod 755 /entrypoint.sh && mkdir -p /app/data

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/opt/venv/bin:$PATH" \
    PYTHONPATH=/app \
    DB_PATH=/app/data/dht.sqlite3

EXPOSE 5000
ENTRYPOINT ["/usr/bin/tini", "--", "/entrypoint.sh"]
CMD ["uvicorn", "rpi.server:app", "--host", "0.0.0.0", "--port", "5000", "--reload"]
